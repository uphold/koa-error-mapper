{
  "name": "koa-error-mapper",
  "version": "2.0.0",
  "description": "An error mapper for Koa applications",
  "keywords": [
    "error",
    "koa",
    "mappers",
    "mapping"
  ],
  "homepage": "https://github.com/uphold/koa-error-mapper",
  "bugs": "https://github.com/uphold/koa-error-mapper/issues",
  "license": "MIT",
  "author": "Uphold",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:uphold/koa-error-mapper"
  },
  "scripts": {
    "changelog": "github_changelog_generator --no-issues --header-label='# Changelog' --future-release=v$npm_config_future_release && sed -i '' -e :a -e '$d;N;2,4ba' -e 'P;D' CHANGELOG.md",
    "lint": "eslint . && jscs .",
    "test": "mocha $npm_package_options_mocha",
    "version": "npm run changelog --future-release=$npm_package_version && git add -A CHANGELOG.md"
  },
  "devDependencies": {
    "co-mocha": "^1.1.0",
    "co-supertest": "^0.0.8",
    "eslint": "^3.11.1",
    "eslint-config-seegno": "^8.0.1",
    "http-errors": "^1.3.1",
    "jscs": "^2.11.0",
    "jscs-config-seegno": "^2.0.0",
    "koa": "^0.18.1",
    "mocha": "^2.2.1",
    "pre-commit": "^1.1.2",
    "should": "^8.3.1",
    "supertest": "^0.15.0"
  },
  "engines": {
    "node": ">=4"
  },
  "options": {
    "mocha": "--recursive --require co-mocha --require should"
  },
  "pre-commit": [
    "lint"
  ]
}
